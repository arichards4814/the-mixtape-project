<!DOCTYPE html>
<html>
  <head>
    <title>TheMixtapeProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  
    <%= stylesheet_link_tag href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
    <%= stylesheet_link_tag href="https://fonts.googleapis.com/css?family=Gochi+Hand|Permanent+Marker&display=swap" %>
  
  </head>

  <body>
  <div class="row">
  <div class="col-md-2">
  </div>
  <div class="col-md-8">
    <nav class="navbar navbar-light bg-light justify-content-between">
    <a class="navbar-brand">The Mixtape</a>
      <form class="form-inline">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
  </nav>
  </div>
</div>
    <%= yield %>
  </body>
</html>

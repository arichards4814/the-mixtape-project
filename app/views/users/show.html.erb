
<%# buffer %>
<div style="height:40px">
</div>

<div class="row"  style="background: #ccccff;">
<div class="col-md-2">
</div>
<div class="col-md-2">
<img style="height:150px" src="<%= image_path @user.current_badge%>">
</div>
<h2 style="font-size: 80px; font-family: 'Montserrat Subrayada', sans-serif;"><%= @user.user_name %><h2>
<a><p style="position:absolute; left:33%; top:30%;" class="prof-nav">Badges: <%=@user.badges.count %></p></a> <a><p style="position:absolute; left:49%; top:30%;" class="prof-nav">Mixtapes: <%=@user.mixtapes.count%></p></a><a><p style="position:absolute; left:67%; top:30%;" class="prof-nav">Likes: <%= @user.mixtapes.map{|mixtape| mixtape.likes.count}.inject(:+)%></p></a>

</div>

<%# buffer %>
<div style="height:40px">
</div>


<div class="container">

  <div class="row">
  <% if @user.mixtapes.count > 0  %>
    <% @user.mixtapes.sort_by{|mixtape| mixtape.likes.count}.reverse.each do |mixtape|%>
      <% url = mixtape.background_url%>
      <% if url == nil || !url.include?(".png")%>
      <% url = "backgrounds/background_1.png" %>
      <% end%>
      <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="card" style="width: 18rem; margin-top: 20px; padding: 20px; background-color: #ccccff;">
          <a href="<%= mixtape_path(mixtape.id) %>"><img class="card-img-top" src="<%= image_path mixtape.cassette_url %>" style = "position: relative; height:100%; background-image: url('<%= image_path(url) %>');" alt="Cassette"></a>
          <div id="handwriting" style="position: absolute; left: 28%; top:13%; height:20px; ">
                <h2 style= "font-family: 'Permanent Marker', cursive; text-align: center; font-size:23px" id="message-text"><%= mixtape.title %><h2>
        </div>
          <div class="card-body" style = "height: 100px">
            <p class="card-text"><%= mixtape.message%></p>
            </div>
            <div>
             <p style = "text-align: center;  position: absolute; right: 20px; bottom: 5px"> <i class="fas fa-heart" style="font-size:20px"></i>  <%= mixtape.likes.count %></p>
            
            </div>
      </div>
    </div>
    <% end %>
  </div>
 <% else %>
    <div class="row">
    <div class= "col-md-2">
    </div>
      <div class="col-md-8 add-song-card" style="height: 300px; background-color: white">
      <br>
      <h2> This user has no mixtapes. </h2><br>
      </div>
    </div>
  <% end %>
</div>
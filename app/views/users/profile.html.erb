<%= render 'profile_header' %>



<div class="container">

  <div class="row">
  <% if @current_user.mixtapes.count > 0  %>
    <% @current_user.mixtapes.each do |mixtape|%>
      <% url = mixtape.background_url%>
      <% if url == nil || !url.include?(".png")%>
      <% url = "backgrounds/background_1.png" %>
      <% end%>
      <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="card" style="width: 18rem; margin-top: 20px; padding: 20px; background-color: #e3f2fd">
          <a href="<%= mixtape_path(mixtape.id) %>"><img class="card-img-top" src="<%= image_path mixtape.cassette_url %>" style = "position: relative; height:100%; background-image: url('<%= image_path(url) %>');" alt="Cassette"></a>
          <div id="handwriting" style="position: absolute; left: 28%; top:11%; height:20px; ">
                <h2 style= "font-family: 'Permanent Marker', cursive; text-align: center; font-size:25px" id="message-text"><%= mixtape.title %><h2>
        </div>
          <div class="card-body" style = "height: 100px">
            <p class="card-text"><%= mixtape.message%></p>
            </div>
            <div>
             <p style = "text-align: center;  position: absolute; right: 20px; bottom: 5px"> <i class="fas fa-heart" style="font-size:20px"></i>  <%= mixtape.likes.count %></p>
            
            </div>
      </div>
    </div>
    <% end %>
  </div>
 <% else %>
    <div class="row">
    <div class= "col-md-2">
    </div>
      <div class="col-md-8 add-song-card" style="height: 300px; background-color: white">
      <br>
      <h2> Create a New Mixtape </h2><br>
      <a href="<%= new_mixtape_path %>"> <i class="fas fa-plus" style="font-size:100px; color:gray;"></i></a>
      </div>
    </div>
  <% end %>
</div>
<%= form_for @mixtape do |f|%>
<div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :class => "form-control", :id => "title",  :onkeyup => "updateText()"%>
    <%= f.label :message %>
    <%= f.text_area :message, :class => "form-control" %>
    <%= f.hidden_field :cassette_url, :class => "form-control"%><br>
    <%= f.hidden_field :background_url, :class => "form-control"%>
    <%= f.hidden_field :user_id, :value => session[:user_id] %><br>
    <%= f.submit "Submit", :class => "btn btn-primary"%>
</div>
<% end %>

<% if @errors %>
    <% @errors.each do |error| %>
    <%= error %>
    <% end%>
<% end%>

